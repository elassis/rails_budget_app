<h1>List of categories</h1>
<% @categories.each do |c|%>
  <div class="category-container" onclick="location.href='<%= user_group_expenses_path(:user_id=> @current_user.id,:group_id => c.id) %>'">
    <div class="img-container">
      <img class="icon-img" src=<%= c.icon %> alt-text='icon-img'>
    </div>
    <div>
      <p><%= c.name %></p>
      <p>transactions registered:<%= c.expenses_total %></p>
    </div>
  </div>
<% end %>

<%= button_to 'add new category', new_user_group_path(@current_user.id), method: :get %>
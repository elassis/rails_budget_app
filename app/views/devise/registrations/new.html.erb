<nav class="login-navbar">
  <div class="section-one">
    <p class="back-button">&#10092;</p>
    <h2 class="login-h2">REGISTER</h2>
  </div>
  
</nav>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <div class="field">
    <%= f.text_field :name, placeholder: "Name" %>
  </div>
  
  <div class="field">
    <%= f.email_field :email, autofocus: true, placeholder: "Email", autocomplete: "email" %>
  </div>

  <div class="field">
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, placeholder: "password" , autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.password_field :password_confirmation,placeholder: "password confirmation", autocomplete: "new-password" %>
  </div>

  <div class="actions button-signup">
    <%= f.submit "Next" %>
  </div>
<% end %>
